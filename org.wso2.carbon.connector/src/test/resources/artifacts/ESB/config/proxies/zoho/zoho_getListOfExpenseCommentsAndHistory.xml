<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="zoho_getListOfExpenseCommentsAndHistory"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <property name="REQUEST_HOST_HEADER" value="invoice.zoho.com" scope="axis2"/>
            <property name="authToken" expression="json-eval($.authToken)"/>
            <property name="expenseId" expression="json-eval($.expenseId)"/>

            <zoho.getListOfExpenseCommentsAndHistory>
                <authToken>{$ctx:authToken}</authToken>
                <expenseId>{$ctx:expenseId}</expenseId>

            </zoho.getListOfExpenseCommentsAndHistory>
            <respond/>
        </inSequence>
        <outSequence>
            <log/>
            <send/>
        </outSequence>
    </target>
    <parameter name="serviceType">proxy</parameter>
    <description/>
</proxy>
