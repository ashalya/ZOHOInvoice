        <property name="uri.var.parameters" expression="get-property('zohoParameters')" />



        <call>

            <endpoint>

                <http method="put"
                      uri-template="https://invoice.zoho.com/api/v3/recurringinvoices/{uri.var.recurringInvoiceId}?authtoken={uri.var.authToken}&amp;JSONString={&quot;recurrence_name&quot;:&quot;{uri.var.recurrenceName}&quot;,&quot;customer_id&quot;:&quot;{uri.var.customerId}&quot;,&quot;recurrence_frequency&quot;:&quot;{uri.var.recurrenceFrequency}&quot;,&quot;line_items&quot;:{uri.var.lineItems}{uri.var.parameters}} "/>
