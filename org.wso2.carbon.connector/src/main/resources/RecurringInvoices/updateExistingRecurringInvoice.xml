            <then>
                <property name="uri.var.paymentGateways" value=""/>
            </then>
            <else>
                <property name="zohoParameters" expression="fn:concat(get-property('zohoParameters'),
               ',&quot;payment_gateways&quot;:', get-property('uri.var.paymentGateways'))"/>
            </else>
        </filter>
        <filter
